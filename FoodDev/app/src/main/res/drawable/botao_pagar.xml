<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">



    <item>
        <shape>
            <!--
            <stroke
                android:width="2dp"
                android:color="@color/colorLetrasPadrao" />   -->

            <!-- setting the thickness of shadow (positive value will give shadow on that side) -->

            <padding
                android:bottom="2.5dp"
                android:left="2.5dp"
                android:right="2.5dp"
                android:top="2.5dp" />

            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- Background -->

    <item>
        <shape>
            <solid android:color="@color/colorBotaoPagar1" />
            <gradient
                android:type="linear"
                android:angle="90"
                android:useLevel="true"
                android:elevation="22dp"
                android:gradientRadius="200%p"
                android:startColor="@color/colorBotaoPagar2"
                android:endColor="@color/colorBotaoPagar2"
                android:centerX="0.2"
                android:centerY="0.5"/>
            <corners android:radius="5dp" />
        </shape>
    </item>



</layer-list>