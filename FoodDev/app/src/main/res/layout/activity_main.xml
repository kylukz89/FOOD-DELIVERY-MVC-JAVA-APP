<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.kylukz.fooddev.View.MainActivity">


    <!-- CONTAINER PRINCIPAL -->
    <LinearLayout
        android:id="@+id/containerPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="70dp">

        <ImageView
            android:id="@+id/imageViewLogoMarca"
            android:layout_width="167dp"
            android:layout_height="149dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            app:srcCompat="@drawable/logomarca_jaentreugie" />

        <!-- BOTÃO LOGIN -->
        <EditText
            android:id="@+id/editTextCampoLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawablePadding="10dp"
            android:hint="PIN"
            android:inputType="number"
            android:maxLength="8"

            android:textColor="#000000"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPreta"
            android:textColorLink="@color/colorPreta"
            android:textSize="17sp" />

        <!-- CAMPO SENHA -->

        <!-- BOTÃO ACESSAR-->
        <EditText
            android:id="@+id/editTextCampoSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawablePadding="10dp"
            android:hint="Senha"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPreta"
            android:textColorLink="@color/colorPreta"
            android:textSize="17sp" />

        <Button
            android:id="@+id/buttonBotaoAcessar"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_radius"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="processamento"
            android:text="Autenticar"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorBrancaPadrao"
            android:textSize="12sp"
            tools:ignore="OnClick" />





        <!-- BOTÃO ACESSAR-->
        <LinearLayout
            android:id="@+id/buttonBotaoAcessarGoogle"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@drawable/button_radius_gmail"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/gmail"
                android:textColor="@color/colorBrancaPadrao" />

            <TextView
                android:id="@+id/imageButtonGoogle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="Autenticar Gmail"
                android:textColor="@color/colorBrancaPadrao"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>






        <!-- BOTÃO ACESSAR-->


        <!-- CADASTRAR-SE -->
        <LinearLayout
            android:id="@+id/buttonBotaoAcessarFacebook"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@drawable/button_radius_facebook"
            android:orientation="horizontal"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/facebook"
                android:textColor="@color/colorBrancaPadrao" />

            <TextView
                android:id="@+id/imageButtonPagar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="Autenticar Facebook"
                android:textColor="@color/colorBrancaPadrao"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewCadastrarse"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="#ffffff"
            android:drawablePadding="10dp"
            android:layout_marginBottom="-30dp"
            android:gravity="center"
            android:text="Cadastrar-se"
            android:textAppearance="@style/MyTitleTextStyle"
            android:textColor="@color/bordoBotoesGerais"
            android:textSize="18sp"
            app:fontFamily="sans-serif"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/textViewEsqueciSenha"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="35dp"
            android:backgroundTint="#ffffff"
            android:drawablePadding="10dp"
            android:layout_marginBottom="-60dp"
            android:gravity="center"
            android:text="Esqueci a senha"
            android:textAppearance="@style/MyTitleTextStyle"
            android:textColor="@color/bordoBotoesGerais"
            android:textSize="12sp"
            app:fontFamily="sans-serif"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints" />

        <!-- CRÉDITOS -->
        <TextView
            android:id="@+id/textViewCreditos"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:backgroundTint="#ffffff"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="Copyright © Versátil Software - 1.0.0"
            android:textColor="#000000"
            android:layout_marginTop="85dp"
            android:textSize="12sp"
            android:textStyle="bold"
            app:fontFamily="@font/roboto_thin"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints" />

    </LinearLayout>


    <include layout="@layout/bottom_sheet_cadastrar_pin" />
    <include layout="@layout/bottom_sheet_esqueci_senha" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>