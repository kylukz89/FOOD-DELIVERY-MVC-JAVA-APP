<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardOpcoesPonto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="8dp"
    android:background="@drawable/border_shadow_botoes_normais"
    android:padding="10dp">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textViewMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18sp" />

<!--        <Spinner-->
<!--            android:id="@+id/spinner"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="48dp" />-->

        <EditText
            android:id="@+id/textViewObs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="35dp"
            android:hint="Observação" />

        <LinearLayout
            android:id="@+id/buttonBotaoConfirmarAddCarrinho"
            android:layout_width="150dp"
            android:layout_height="34dp"
            android:layout_gravity="bottom|right"
            android:background="@drawable/button_radius"
            android:padding="5dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/ic_carrinho"
                android:textColor="@color/colorBrancaPadrao" />

            <TextView
                android:id="@+id/imageButtonGoogle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="Ok, adicionar"
                android:textColor="@color/colorBrancaPadrao"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>