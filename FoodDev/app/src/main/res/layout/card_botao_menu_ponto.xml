<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardBotaoMenuPonto"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="7dp"
    android:layout_marginRight="3dp"
    android:layout_marginBottom="1dp"
    android:orientation="horizontal"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardCornerRadius="20dp"
    app:cardElevation="3dp"
    app:cardMaxElevation="3dp">


    <TextView
        android:id="@+id/textViewNomeBotao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="3dp"
        android:gravity="center"
        android:text="Comanda"
        android:textColor="@color/colorBrancaPadrao"
        android:textSize="12sp"
        app:fontFamily="sans-serif" />

    <ImageView
        android:id="@+id/imageViewImagemBotao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        tools:ignore="VectorDrawableCompat" />


    <LinearLayout
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewIconeFlag"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:textColor="@color/colorPadraoCinzaPadrao"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewFlagNumeroItensCarrinho"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:gravity="center"
            android:layout_marginTop="-16dp"
            android:textColor="@color/colorPadraoCinzaPadrao"
            android:textSize="10dp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.cardview.widget.CardView>