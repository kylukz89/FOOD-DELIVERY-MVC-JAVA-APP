<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutPopUpCartao"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="30dp"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <RelativeLayout
                android:id="@+id/linearValores"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="10dp"
                    android:inputType="number|text"
                    android:text="Total"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/MyTitleTextStyle"
                    android:textColor="@color/colorPreta"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/editTextValor"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_horizontal"
                    android:inputType="number|text"
                    android:text="R$ 80,00"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/MyTitleTextStyle"
                    android:textColor="@color/colorVermelha"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="147dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="10dp"
                    android:inputType="number|text"
                    android:text="Vou pagar"
                    android:textAppearance="@style/MyTitleTextStyle"
                    android:textColor="@color/colorPreta"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/textViewValorTotal"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="10dp"
                    android:inputType="number|text"
                    android:text="80,00"
                    android:textAppearance="@style/MyTitleTextStyle"
                    android:textColor="@color/colorPreta"
                    android:visibility="visible"
                    android:textSize="18dp"
                    android:drawableLeft="@drawable/ic_money_verde" />
            </RelativeLayout>





            <TextView
                android:id="@+id/textViewTituloPOPUP"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#004C03"
                android:drawingCacheQuality="auto"
                android:gravity="center"
                android:maxLength="@android:integer/config_longAnimTime"
                android:padding="12dp"
                android:text="CIELO - PAGAMENTO COM CARTÃO"
                android:textAlignment="center"
                android:textColor="@color/colorBrancaPadrao"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageViewBandeiras"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewTituloPOPUP"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:drawingCacheQuality="high"
                android:visibility="visible"

                tools:ignore="NotSibling" />


            <EditText
                android:id="@+id/editTextNumeroCartao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearValores"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:drawablePadding="10dp"
                android:drawingCacheQuality="high"
                android:fontFamily="sans-serif-light"
                android:hint="Cartão 0000.0000.0000.0000"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="16sp"
                android:visibility="visible"
                android:gravity="center_horizontal" />

            <EditText
                android:id="@+id/editTextValidade"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextNumeroCartao"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:hint="Val. 00/00"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="16sp"
                android:visibility="visible"
                android:layout_marginLeft="10dp" />

            <EditText
                android:id="@+id/editTextCVV"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextNumeroCartao"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/editTextValidade"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif-light"
                android:hint="CVV 000"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="16sp"
                android:visibility="visible"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/editTextValidade"
                android:gravity="center_horizontal" />

            <EditText
                android:id="@+id/editTextTitular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextValidade"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif-light"
                android:hint="Nome Titular"
                android:textAlignment="center"
                android:textSize="16sp"
                android:visibility="visible"
                android:gravity="center_horizontal" />


            <LinearLayout
                android:id="@+id/linearBotaoConfirmarPagamento"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/editTextTitular"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="false"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_radius_add_carrinho"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginRight="10dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_confirmar_pagamento"
                    android:foregroundGravity="center_horizontal"
                    android:textColor="@color/colorPadraoCinzaPadrao"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/imageButtonPagar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:foregroundGravity="center_horizontal"
                    android:padding="5dp"
                    android:text="CONFIRMAR"
                    android:textAlignment="center"
                    android:textColor="@color/colorBrancaPadrao"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>