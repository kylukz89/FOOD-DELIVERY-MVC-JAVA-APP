<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="elevation">0dp</item>

    </style>
    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/colorBrancaPadrao</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/colorBrancaPadrao</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/colorBrancaPadrao</item>
    </style>
    <!--Action bar-->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="SlidingDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/da_slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/da_slide_out_top</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!-- Card PopUp -->
    <style name="CardInflateTheme" parent="Base.Theme.AppCompat.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/CardInflate.Window</item>
    </style>
    <style name="CardInflate.Window" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/animate_shrink_enter</item>
        <item name="android:windowExitAnimation">@anim/animate_shrink_exit</item>
    </style>
    <!-- __________________ -->

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>
    <!-- Animation for dialog box -->
    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>


    <style name="bottom_sheet_item">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/normal_padding</item>
    </style>

    <dimen name="default_margin">16dp</dimen>
    <dimen name="drawable_padding">24dp</dimen>
    <dimen name="text_size">16sp</dimen>
    <dimen name="normal_padding">16dp</dimen>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
</resources>
